<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hopeless.taboo.fragments.WordDisplayFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/main_word_view"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/main_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main_word_view"
        >

        <TextView
            android:id="@+id/taboo_word_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment" />
        <TextView
            android:layout_below="@id/taboo_word_1"
            android:id="@+id/taboo_word_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment" />
        <TextView
            android:id="@+id/taboo_word_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/taboo_word_2"
            android:text="@string/hello_blank_fragment" />
        <TextView
            android:id="@+id/taboo_word_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/taboo_word_3"
            android:text="@string/hello_blank_fragment" />

    </RelativeLayout>
</RelativeLayout>
